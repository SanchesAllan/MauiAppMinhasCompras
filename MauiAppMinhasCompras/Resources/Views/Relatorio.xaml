<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAppMinhasCompras.Resources.Views.Relatorio"
             Title="Relatório de Compras">

    <VerticalStackLayout Padding="10" Spacing="10">
        <Label Text="Selecione o Período" FontAttributes="Bold" />

        <HorizontalStackLayout Spacing="10">
            <DatePicker x:Name="dt_inicio" />
            <DatePicker x:Name="dt_fim" />
        </HorizontalStackLayout>

        <Button Text="Filtrar" Clicked="BtnFiltrar_Clicked" />

        <Frame Padding="0" Margin="0" VerticalOptions="FillAndExpand">
            <ListView x:Name="lst_relatorio" HasUnevenRows="False">
                <ListView.Header>
                    <Grid ColumnDefinitions="100,80,80,120" Padding="5">
                        <Label Grid.Column="0" Text="Descrição" />
                        <Label Grid.Column="1" Text="Preço" />
                        <Label Grid.Column="2" Text="Qtd" />
                        <Label Grid.Column="3" Text="Data" />
                    </Grid>
                </ListView.Header>

                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <Grid ColumnDefinitions="100,80,80,120" Padding="5">
                                <Label Grid.Column="0" Text="{Binding Descricao}" />
                                <Label Grid.Column="1" Text="{Binding Preco, StringFormat='{}{0:c}'}" />
                                <Label Grid.Column="2" Text="{Binding Quantidade}" />
                                <Label Grid.Column="3" Text="{Binding DataCadastro, StringFormat='{}{0:dd/MM/yyyy}'}" />
                            </Grid>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </Frame>
    </VerticalStackLayout>
</ContentPage>